<p class="notice"><%= notice %></p>
<%= render 'books/list',user: @user, book: @book %>

<div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <% @books.each do |book| %>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg' %></td>
              <td><%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          </tbody>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= paginate @books %>