<div>
  <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
  <% end %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
    <% if @user.id == current_user.id %>
      <%= link_to edit_user_path(@user) do %>
      <p class="btn btn-outline-secondary btn-block fas fa-user-cog"></p>
    <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% @books.each do |book| %>
  <div>
    <p>投稿ユーザー画像：<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %></p>
    <p>title Opinion</p>
    <%= books.title %><%= books.body %>
    <p><%= profile_image_id.user.name %></p>
  </div>
  <% end %>
<%= paginate @books %>