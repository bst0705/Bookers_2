<% books.each do |book| %>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
                <% end %>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td>
                <%= book.body %>
              </td>
              <td>
                <td id="favorite_buttons_<%= book.id %>">
                <%= render 'favorites/favorite', book: book %>
              </td>
              </td>
              <td>
                <p>コメント件数：<%= book.book_comments.count %></p>
              </td>
            </tr>
          </tbody>
        </table>
        <% end %>