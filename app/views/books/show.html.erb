<div>
  <%= attachment_image_tag@user, :profile_image %>
  <p><%= @user.name %></p>
  <p>説明：<%= @book.title %></p>
  <p>ユーザーネーム：<%= @book.body %></p>
  <p>投稿日時：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post_image.user == current_user %>
    <p><%= link_to "Destroy", post_image_path(@post_image), method: :delete %></p>
    <p><%= link_to "Edit", book_path(@) %></p>
  <% end %>
</div>

