<% if book.errors.any? %>
  <%= book.errors.count %>件のerrorが発生しました
  <% book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<% if user.errors.any? %>
  <%= user.errors.count %>件のerrorが発生しました
  <% user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>

          <% if user.id == current_user.id %>
            <%= link_to edit_user_path(user) do %>
            <div class="row">
            <p class="btn btn-outline-secondary btn-block fas fa-user-cog"></p>
            </div>
            <% end %>
          <% end %>

        <h2 class="mt-3">New book</h2>
          <%= form_with model: book, local:true do |f| %>
            <p>title</p>
            <%= f.text_field :title %>
            <p>Opinion</p>
            <%= f.text_area :body %>
            <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
          <% end %>
      </div>


